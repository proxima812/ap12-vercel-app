---
import { navLinks } from "@/data/links"
import { getCollection } from "astro:content"
const postsLength = (await getCollection("posts")).length
---

<header class="py-5">
	<div class="container mx-auto flex max-w-6xl items-center justify-between px-5">
		<nav class="flex sm:gap-5 flex-wrap gap-1">
			{
				navLinks.map((link: any) => (
					<a class="font-medium" href={link.someLink}>
						{link.nameLink}
						{link.lengthSnow && ` (${postsLength})`}
					</a>
				))
			}
		</nav>
		<a
			class="group flex items-center gap-3 rounded-md bg-green-400 px-3 py-1.5 font-medium text-white ring-1 ring-inset ring-green-400 transition-all ease-linear hover:translate-x-[1.24px]"
			target="_blank"
			href="https://t.me/+nSWS3inC4gE2Njg6"
		>
			<span>присоединиться</span>
			<svg
				class="transition-transform ease-linear group-hover:translate-x-[0.9px]"
				width="12"
				height="13"
				viewBox="0 0 12 13"
				fill="none"
				xmlns="http://www.w3.org/2000/svg"
			>
				<g clip-path="url(#clip0_1026_165-511191)">
					<path d="M1 6.5H11" stroke="white" stroke-width="1.5" stroke-linecap="round"
					></path>
					<path
						d="M7 10.5L11 6.5L7 2.5"
						stroke="white"
						stroke-width="1.5"
						stroke-linecap="round"></path>
				</g>
				<defs>
					<clipPath id="clip0_1026_165-511191">
						<rect width="12" height="12" fill="white" transform="translate(0 0.5)"></rect>
					</clipPath>
				</defs>
			</svg>
		</a>
	</div>
</header>
